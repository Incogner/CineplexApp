<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient
                android:endColor="@color/gradYellowLight1"
                android:centerColor="@color/gradBlueLight2"
                android:startColor="@color/gradYellowLight1"
                android:angle="270" />
            <corners
                android:radius="10dp"
                />
            <stroke
                android:width="1dp"
                android:color="@color/navigationBarColor" />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient
                android:endColor="@color/gradYellowLight1"
                android:centerColor="@color/gradBlueLight2"
                android:startColor="@color/gradBlueLight3"
                android:angle="270" />
            <corners
                android:radius="10dp"
                />
            <stroke
                android:width="1dp"
                android:color="@color/navigationBarColor" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient
                android:endColor="@color/gradYellowLight1"
                android:centerColor="@color/gradBlueLight2"
                android:startColor="@color/gradBlueLight3"
                android:angle="270" />
            <corners
                android:radius="10dp"
                />
            <stroke
                android:width="1dp"
                android:color="@color/navigationBarColor" />
        </shape>
    </item>
</selector>